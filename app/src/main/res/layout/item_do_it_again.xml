<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="256dp"
        android:layout_height="133dp"
        app:cardBackgroundColor="#F9F9F9"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_item_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_clock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_vertical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/item_clock"
                    android:paddingStart="10dp"
                    android:text="Food"
                    android:textColor="#333333"
                    android:textSize="10sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_time_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Yesterday 3pm"
                    android:textColor="#999999"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_item_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="7dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_res_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_baseline_cloud" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/item_res_image"
                    android:layout_marginStart="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KFC Banani"
                        android:padding="3dp"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_below="@id/item_restaurant_name"
                        android:text="1 Kacchi biriyani · 1 Beef chilli onion... "
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_below="@id/item_item_name"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/item_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="৳250"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/item_order_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Again"
                            android:layout_alignParentEnd="true"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:layout_toEndOf="@id/item_price"
                            android:textColor="#079D49"
                            android:textSize="11sp" />
                    </RelativeLayout>




                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</layout>